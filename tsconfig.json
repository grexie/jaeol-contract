{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "types": ["truffle-contracts", "node", "mocha", "chai", "chai-as-promised"],
    "typeRoots": ["./types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
